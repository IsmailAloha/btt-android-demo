<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Android 13+ -->
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        android:required="false" />

    <application
        android:name=".DemoApplication"
        android:allowBackup="true"
        android:icon="${appIcon}"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="${appIconRound}"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlueTriangleDemo"
        android:usesCleartextTraffic="true"
        tools:ignore="UnusedAttribute">
        <profileable
            android:shell="true"
            tools:targetApi="29" />

        <activity
            android:name=".compose.screens.AppIntroComposeActivity"
            android:exported="false"
            android:label="@string/title_activity_app_intro_compose"
            android:theme="@style/Theme.BlueTriangleDemo" />
        <activity
            android:name=".layout.AppIntroActivity"
            android:exported="false" />
        <activity
            android:name=".layout.ProfileLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".layout.ConfigurationLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".compose.screens.ConfigurationComposeActivity"
            android:exported="false" />
        <activity
            android:name=".layout.HybridDemoLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".compose.screens.ComposeAboutActivity"
            android:exported="false" />
        <activity
            android:name=".layout.LauncherActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".layout.StoreActivity"
            android:exported="true" />
        <activity
            android:name=".compose.screens.ComposeStoreActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".compose.screens.ProductDetailsActivity" />
        <service
            android:name=".PushNotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>