<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp"
    tools:context=".ui.cart.CheckoutFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/thanks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thanks for Ordering..."
        android:textColor="?colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/order_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/order_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="?colorOnSurface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thanks"
        tools:text="ksdajfaksfsdal" />

    <Button
        android:id="@+id/continue_shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Continue Shopping"
        app:layout_constraintEnd_toEndOf="@+id/order_number"
        app:layout_constraintStart_toStartOf="@+id/order_number"
        app:layout_constraintTop_toBottomOf="@+id/order_number" />


</androidx.constraintlayout.widget.ConstraintLayout>